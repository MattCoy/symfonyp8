{% extends 'base.html.twig' %}

{% block title %}{{ message.sujet }}{% endblock %}

{% block body %}

		{# affichage des éventuels messages flash #}
	    {% for label, messages in app.flashes %}
	 	    {% for message in messages %}
	 		    <div class="alert alert-{{ label }}">{{ message}}</div>
	 	    {% endfor %}
	    {% endfor %}
	
		<p>{{ message.sujet }}, envoyé le {{ message.dateenvoi|date('d/m/Y')}} par {{ message.nom }} ( {{ message.email }} )

		</p>
		<p>
			{{ message.contenu }}
		</p>

{% endblock %}
