{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
	 {{ dump(articles) }}

	 {# affichage des éventuels messages flash #}
	 {% for label, messages in app.flashes %}
	 	{% for message in messages %}
	 		<div class="alert alert-{{ label }}">{{ message}}</div>
	 	{% endfor %}
	 {% endfor %}

	{% for article in articles %}
		<article>
			<h3>{{ article.title }}</h3>
			publié par {{ article.user.username }} le {{ article.datepubli|date('d/m/Y') }}
			<a href="{{ path('showArticleWithSlug', {slug: article.slug}) }}">Voir</a> | 
			<a href="{{ path('updateArticle', {id: article.id}) }}">Modifier</a> |
			<a href="{{ path('deleteArticle', {id: article.id}) }}">Supprimer</a>
		</article>
	{% endfor %}
{% endblock %}
